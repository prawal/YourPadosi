<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_selector"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:background="@drawable/bg_grey" >

        <ImageView
            android:id="@+id/iv_productImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="46dp"
            android:src="@drawable/paya" />

        <TextView
            android:id="@+id/tv_productTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_productImage"
            android:layout_toRightOf="@+id/iv_productImage"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tv_productPubDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_productImage"
            android:layout_alignLeft="@+id/tv_productTitle"
            android:layout_alignRight="@+id/button2"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/bg2"
            android:gravity="center" />

        <Button
            android:id="@+id/button2"
            android:layout_width="700dp"
            android:layout_height="250dp"
            android:layout_below="@+id/iv_productImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:background="@drawable/grey_box"
            android:gravity="center" />

        <TextView
            android:id="@+id/unlikeid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_alignLeft="@+id/button2"
            android:text="unLike"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/likeid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_alignLeft="@+id/button2"
            android:text="Like"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/commenttopado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_marginLeft="66dp"
            android:layout_toRightOf="@+id/unlikeid"
            android:text="Comment"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/button2"
            android:layout_marginTop="24dp"
            android:layout_toRightOf="@+id/unlikeid"
            android:text="TextView" />

        <ImageView
            android:id="@+id/iv_productImage2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_productPrice"
            android:src="@drawable/paya" />

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_productImage2"
            android:layout_marginTop="41dp"
            android:layout_toLeftOf="@+id/iv_productImage2"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_productComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_alignRight="@+id/button2"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_productLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_marginLeft="155dp"
            android:layout_toRightOf="@+id/tv_productTitle"
            android:text="TextView" />

        <TextView
            android:id="@+id/likebuttonid"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBaseline="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_marginLeft="61dp"
            android:layout_toRightOf="@+id/tv_productTitle"
            android:background="@drawable/like_icon" />

        <TextView
            android:id="@+id/commentlikebuttonid"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBaseline="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_marginRight="80dp"
            android:layout_toLeftOf="@+id/tv_productComment"
            android:background="@drawable/comment_icon" />

    </RelativeLayout>

</LinearLayout>