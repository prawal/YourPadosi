<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_selector"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="167dp"
        android:layout_weight="0.19"
        android:background="@drawable/bg_grey" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/bg2"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_productTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_productImage"
            android:layout_toRightOf="@+id/iv_productImage"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tv_productPubDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_productImage"
            android:layout_alignLeft="@+id/tv_productTitle"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/button2"
            android:layout_width="1200dp"
            android:layout_height="350dp"
            android:layout_alignLeft="@+id/iv_productImage"
            android:layout_below="@+id/tv_productPubDate"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="58dp"
            android:background="@drawable/grey_box" />

        <ImageView
            android:id="@+id/iv_productImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="39dp"
            android:layout_marginTop="65dp"
            android:src="@drawable/paya" />

        <TextView
            android:id="@+id/likeid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_alignLeft="@+id/button2"
                 android:text="Like"
            android:textColor="@android:color/white"/>
           <TextView
            android:id="@+id/unlikeid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_alignLeft="@+id/button2"
                    android:text="unLike"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/commenttopado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_alignRight="@+id/tv_productPubDate"
              android:text="Comment"
            android:textColor="@android:color/white"  />

        <TextView
            android:id="@+id/likebuttonid"
           android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBaseline="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_marginLeft="151dp"
            android:layout_toRightOf="@+id/commenttopado"
          android:background="@drawable/like_icon"/>

        <TextView
            android:id="@+id/tv_productLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_marginLeft="170dp"
            android:layout_toRightOf="@+id/likebuttonid"
            android:text="TextView" />

        <TextView
            android:id="@+id/commentlikebuttonid"
              android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBaseline="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_marginLeft="152dp"
            android:layout_toRightOf="@+id/tv_productLike"
          android:background="@drawable/comment_icon" />

        <TextView
            android:id="@+id/tv_productComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_alignRight="@+id/button2"
            android:layout_marginRight="47dp"
            android:text="TextView" />

        <ImageView
            android:id="@+id/iv_productImage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/button2"
            android:layout_marginTop="54dp"
            android:layout_toLeftOf="@+id/likebuttonid"
            android:src="@drawable/paya" />

        <TextView
            android:id="@+id/tv_productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/iv_productImage"
            android:layout_alignTop="@+id/button2"
            android:layout_marginTop="29dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_productPrice"
            android:layout_below="@+id/iv_productImage2"
            android:layout_marginTop="28dp"
            android:text="TextView" />

    </RelativeLayout>

</LinearLayout>